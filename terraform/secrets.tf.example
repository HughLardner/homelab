# Secrets configuration
# Copy this file to secrets.tf and fill in your values
# secrets.tf is gitignored and will not be committed

# Cloudflare API Token
# Used by cert-manager for DNS-01 challenges
# Required permissions: Zone:DNS:Edit
variable "cloudflare_api_token" {
  description = "Cloudflare API token for DNS management"
  type        = string
  sensitive   = true
}

# GitHub Personal Access Token
# Used by ArgoCD to access private repositories
# Required scopes: repo (Full control of private repositories)
variable "github_token" {
  description = "GitHub Personal Access Token for ArgoCD"
  type        = string
  sensitive   = true
}

# Traefik Dashboard Password
# Used for basic authentication on Traefik dashboard
variable "traefik_dashboard_password" {
  description = "Password for Traefik dashboard basic auth"
  type        = string
  sensitive   = true
}

# ArgoCD Admin Password
# Initial admin password for ArgoCD
variable "argocd_password" {
  description = "Admin password for ArgoCD"
  type        = string
  sensitive   = true
}

# Grafana Admin Password
# Admin password for Grafana dashboard
variable "grafana_admin_password" {
  description = "Admin password for Grafana"
  type        = string
  sensitive   = true
}

# Set actual secret values by adding 'default' to each variable above:
#
# variable "cloudflare_api_token" {
#   type      = string
#   sensitive = true
#   default   = "your-actual-cloudflare-token"
# }
#
# OR use terraform.tfvars file (also gitignored):
# cloudflare_api_token       = "your-cloudflare-token"
# github_token               = "ghp_your_github_token"
# traefik_dashboard_password = "your-secure-password"
# argocd_password            = "another-secure-password"
# grafana_admin_password     = "yet-another-secure-password"
