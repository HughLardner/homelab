# Ignore Helm templates - they contain Go/Jinja2 template syntax
# that Prettier will mangle (adding spaces inside {{ }})
**/templates/**/*.yaml
**/templates/**/*.yml

# Ignore Ansible playbooks with Jinja2 templates
ansible/playbooks/*.yml

# Ignore values files that may contain template variables
kubernetes/**/values.yaml
kubernetes/**/*-values.yaml

# Ignore sealed secrets
**/secrets/*.yaml
